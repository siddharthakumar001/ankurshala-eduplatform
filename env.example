# Ankurshala Production Environment Variables
# Copy this file to .env-prod and customize the values

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-must-be-at-least-64-characters-long

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=ankurshala
DB_USERNAME=ankur
DB_PASSWORD=your-secure-database-password

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your-secure-redis-password

# Frontend Configuration
NEXT_PUBLIC_API_URL=https://ankurshala.com/api
NODE_ENV=production

# Backend Configuration
SERVER_PORT=8080
SPRING_PROFILES_ACTIVE=production

# Demo Data Seeding (Production)
DEMO_SEED_ON_START=true
DEMO_ENV=prod
DEMO_FORCE=true

# Encryption
BANK_ENC_KEY=your-bank-encryption-key-32-chars-minimum
